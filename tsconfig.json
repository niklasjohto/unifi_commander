{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "watch": true,
    "lib": ["ESNext"],
    "strictPropertyInitialization": false,
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src/"]
}
